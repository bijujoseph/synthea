      "type": "Initial",
      "direct_transition": "Not 2 Check"
    },
    "Terminal": {
      "type": "Terminal"
    },
    "Any Score": {
      "type": "Simple",
      "distributed_transition": [
        {
          "transition": "CARE Score 1",
          "distribution": 0.04
        },
        {
          "transition": "CARE Score 2",
          "distribution": 0.491
        },
        {
          "transition": "CARE Score 3",
          "distribution": 0.427
        },
        {
          "transition": "CARE Score 4",
          "distribution": 0.033
        },
        {
          "transition": "CARE Score 5",
          "distribution": 0.009
        }
      ]
    },
    "Not 1": {
      "type": "Simple",
      "distributed_transition": [
        {
          "transition": "CARE Score 2",
          "distribution": 0.512
        },
        {
          "transition": "CARE Score 3",
          "distribution": 0.445
        },
        {
          "transition": "CARE Score 4",
          "distribution": 0.034
        },
        {
          "transition": "CARE Score 5",
          "distribution": 0.009
        }
      ]
    },
    "Not 1 or 2": {
      "type": "Simple",
      "distributed_transition": [
        {
          "transition": "CARE Score 3",
          "distribution": 0.911
        },
        {
          "transition": "CARE Score 4",
          "distribution": 0.07
        },
        {
          "transition": "CARE Score 5",
          "distribution": 0.019
        }
      ]
    },
    "CARE Score 1": {
      "type": "SetAttribute",
      "attribute": "care_score",
      "direct_transition": "Priority 4",
      "value": 1
    },
    "CARE Score 2": {
      "type": "SetAttribute",
      "attribute": "care_score",
      "value": 2,
      "direct_transition": "Priority 4"
    },
    "CARE Score 3": {
      "type": "SetAttribute",
      "attribute": "care_score",
      "value": 3,
      "distributed_transition": [
        {
          "transition": "Priority 4",
          "distribution": 0.1
        },
        {
          "transition": "Priority 3",
          "distribution": 0.4
        },
        {
          "transition": "Priority 2",
          "distribution": 0.4
        },
        {
          "transition": "Priority 1",
          "distribution": 0.1
        }
      ]
    },
    "CARE Score 4": {
      "type": "SetAttribute",
      "attribute": "care_score",
      "value": 4,
      "distributed_transition": [
        {
          "transition": "Priority 4",
          "distribution": 0.1
        },
        {
          "transition": "Priority 3",
          "distribution": 0.4
        },
        {
          "transition": "Priority 2",
          "distribution": 0.4
        },
        {
          "transition": "Priority 1",
          "distribution": 0.1
        }
